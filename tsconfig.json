{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./www",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@Applications/*": ["./Applications/*"],
      "@Domains/*": ["./Domains/*"],
      "@Commons/*": ["./Commons/*"],
      "@Infrastructures/*": ["./Infrastructures/*"],
      "@Interfaces/*": ["./Interfaces/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ]
}
